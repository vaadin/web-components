{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [ "esnext", "es2018", "dom" ],
    "noEmit": true,
    "strict": true,
    // WARNING: Avoid enabling the `skipLibCheck` option as it disables type checking
    // for the components' type declarations (e.g packages/button/src/vaadin-button.d.ts).
    "skipLibCheck": false,
    "skipDefaultLibCheck": true
  },
  "include": [
    "packages/**/test/typings",
    "test/typings",
    // Dummy JSX type declaration needed for type-checking @types/mdx, which is used by Astro
    "api-docs/jsx.d.ts"
  ]
}
