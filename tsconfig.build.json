{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [ "esnext", "es2018", "dom" ],
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    // WARNING: Avoid enabling the `skipLibCheck` option as it disables type checking
    // for the components' type declarations (e.g packages/button/src/vaadin-button.d.ts).
    "skipLibCheck": false,
    "skipDefaultLibCheck": true
  },
  "include": [
    "packages/lit-renderer",
    "packages/**/src/*-lit-renderer.ts"
  ]
}
